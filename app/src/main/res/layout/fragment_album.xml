<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/artiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textColor="#069BFF"
            android:textSize="20sp"
            android:text="Artiest"/>

        <TextView
            android:id="@+id/titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artiest"
            android:layout_marginTop="5dp"
            android:textIsSelectable="false"
            android:text="Titel"/>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="115dp"
            android:layout_marginBottom="100dp"
            android:layout_below="@+id/titel"/>

        <ImageView
            android:id="@+id/plaatje"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/titel"
            android:layout_marginTop="15dp"
            android:contentDescription="@+id/plaatje" />

        <TextView
            android:id="@+id/nummers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plaatje"
            android:layout_marginTop="15dp"
            android:textIsSelectable="false" />

        <ImageView
            android:id="@+id/plaatje_start_stop"
            android:contentDescription="@+id/plaatje_start_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nummers"
            android:layout_marginTop="0dp"
            android:src="@drawable/start"/>

        <TextView
            android:id="@+id/tekst_start_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/plaatje_start_stop"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:textIsSelectable="false"
            android:textColor="#069BFF"
            android:textSize="20sp"
            android:text="@string/nummer_1"
            android:clickable="true" />

        <Switch
            android:id="@+id/Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plaatje_start_stop"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="Offline beschikbaar" />

    </RelativeLayout>

</ScrollView>